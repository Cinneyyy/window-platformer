{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C/C++",
            "command": [
                "gcc",
                "-I ./include", // Include directory
                "-L ./lib", // Library directory
                "-o ./build/main", // Output file name
                "(Get-ChildItem ./src/*.c)", // Source files
                "-lmingw32 -lSDL3", // Libraries
                "-D WINDOWS_BUILD", // Pre-processor definitions

                "\n./build/main" // Run output
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Run C/C++",
            "command": [
                "./build/main"
            ],
            "type": "shell",
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}